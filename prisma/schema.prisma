generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Usuario {
  id                  String   @id @default(uuid())  // ID 煤nico con UUID
  nombre              String   @db.VarChar(50)
  apellidoPaterno     String   @db.VarChar(50)
  apellidoMaterno     String   @db.VarChar(50)
  email               String   @unique
  contrasena          String   // Guardar hash, NO en texto plano
  telefono            String?  @db.VarChar(15)  // Opcional
  pais                String   @db.VarChar(50)
  ciudad              String   @db.VarChar(50)
  genero              String?  @db.VarChar(10) // Opcional
  fechaCreacion       DateTime @default(now())
  ultimaActualizacion DateTime @updatedAt

  //  Para verificaci贸n de cuenta
  verificado          Boolean  @default(false) // Indica si el usuario verific贸 su email
  codigoVerificacion  String?  @unique // C贸digo de verificaci贸n de email (expira)

  //  Para recuperaci贸n de contrase帽a
  tokenRecuperacion   String?  @unique // Token 煤nico para recuperaci贸n
  expiracionToken     DateTime? // Fecha de expiraci贸n del token
}
